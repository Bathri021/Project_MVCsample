@{
    ViewBag.Title = "Views";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<h2>ViewBag Display</h2>
<h3>Book Details</h3>

<table class="table table-hover">
    <thead>
        <tr class="table-info">
            <th>Sno</th>
            <th>Book Title</th>
            <th>Author</th>
            <th>Genere</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 1;
            foreach (var item in ViewBag.books)
            {
                <tr class="table-light">
                    <td>@count</td>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.Genere</td>
                    <td>@item.Price</td>
                </tr>
                count++;
            }
        }
    </tbody>
</table>

<h2>ViewData Display</h2>
<h3>User Details</h3>

<table class="table table-hover">
    <thead>
        <tr class="table-info">
            <th scope="col">Sno</th>
            <th scope="col">Name</th>
            <th scope="col">UserName</th>
            <th scope="col">Mail ID</th>
            <th scope="col">Role</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
            foreach (var user in ViewData["Users"] as List<Book_Shoppe.Data.User>)
            {
                <tr class="table-light">
                    <td>@i</td>
                    <td> @user.Name</td>
                    <td> @user.UserName</td>
                    <td>@user.MailID</td>
                    <td>@user.RoleID</td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>
