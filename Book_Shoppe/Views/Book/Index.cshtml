@model IEnumerable<Book_Shoppe.Data.Book>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<div class="jumbotron">
    <h1>Books</h1>
</div>

<h1>Book Details</h1>

<table class="table table-hover">
    <thead>
        <tr class="table-info">
            <th>Sno</th>
            <th>Book Title</th>
            <th>Author</th>
            <th>Genere</th>
            <th>Price</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 1;
            foreach (var item in Model)
            {
                <tr class="table-light">
                    <td>@count</td>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.Genere</td>
                    <td>@item.Price</td>
                    <td class="btn-group" role="group" aria-label="Basic example">@Html.ActionLink("Edit", "Edit", new { id=item.BookID}, new { @class = "btn btn-secondary" }) @Html.ActionLink("Delete", "Delete",new { id=item.BookID}, new { @class = "btn btn-secondary" })</td>
                </tr>
                count++;
            }
        }
    </tbody>
</table>
<br />
@Html.ActionLink("Add Book", "Create", null, new { @class = "btn btn-secondary" })