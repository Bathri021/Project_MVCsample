@model Book_Shoppe.Models.UserDetail
@{
    ViewBag.Title = "UserDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>User Details</h1>
<table class="table table-hover">
    <thead>
        <tr class="table-info">
            <th scope="col">Sno</th>
            <th scope="col">Name</th>
            <th scope="col">UserName</th>
            <th scope="col">Mail ID</th>
            <th scope="col">Role</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
            foreach (var user in Model.UserDetails.ToList())
            {
                <tr class="table-light">
                    <td>
                        @i
                    </td>
                    <td>
                        @user.Name
                    </td>
                    <td>
                        @user.UserName
                    </td>
                    <td>
                        @user.MailID
                    </td>
                    <td>
                        @user.Role
                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>
